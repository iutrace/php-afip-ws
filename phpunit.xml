<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.6/phpunit.xsd"
         cacheResultFile="bootstrap/cache/.phpunit.result.cache"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         beStrictAboutCoversAnnotation="false"
         beStrictAboutOutputDuringTests="true"
         beStrictAboutTodoAnnotatedTests="false"
         processIsolation="false"
         stopOnFailure="true">
    <coverage>
        <include>
            <directory suffix=".php">src/</directory>
        </include>
        <report>
            <html outputDirectory="resources/.tmp/reports/coverage" lowUpperBound="55" highLowerBound="85" />
            <clover outputFile="resources/.tmp/clover.xml"/>
            <text outputFile="resources/.tmp/reports/executed.txt"/>
        </report>
    </coverage>
    <testsuites>
        <testsuite name="integration">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>
</phpunit>
